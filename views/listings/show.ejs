<% layout("/layouts/boilerplate") -%>
  <div class="row">
<div class="col-8 offset-3 mt-3 ">
<h3><%=listing.title %></h3>
</div>
  <div class="card col-6 offset-3 show-card listing-card">
    <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
    <div class="card-body">
      <p class="card-text">
        <br>
        <%= listing.description %> <br>
        &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
        <%= listing.location %> <br>
        <%= listing.country %> <br>
      </p>
    </div>
  </div>
    <br />
  
  <div class="btns mb-5">
  <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
  <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
      <button class="btn btn-dark offset-5">Delete</button>
    </form>
  </div>
  <hr>
  <div class="col-8 offset-3 mb-3">
    <h5>Leave a Review</h5>
    <form action="/listings/<%=listing._id%>" method="post" novalidate class="needs-validation">
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input type="range" min="1" max="5"  name="rating" class="form-range"/>
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea name="comment"  cols="30" rows="10" class="form-control" placeholder="Comment your thoughts" required></textarea>
        <div class="invalid-feedback">Please submit some comments </div>
      </div>
      <button class="btn btn-outline-dark" type="submit">Submit</button>
    </form>
    <hr>
    <p><b>All Reviews</b></p>
    <div class="row">

      <% for (review of listing.reviews) { %>
        <div class="card col-5 ms-3 mb-3">
          <div class="card-body">
            <h5 class="card-title">Sumit Kumar</h5>
            <p class="card-text"><%= review.comment %></p>
            <p class="card-text"><%= review.rating %> Stars</p>
          </div>
          <form action="/listings/<%=listing._id%>/<%=review._id%>?_method=DELETE" class="mb-3" method="post">
            <button class="btn btn-sm btn-dark">Delete</button>
          </form>
        </div>
        <% } %>
      </div>

  </div>
</div>
